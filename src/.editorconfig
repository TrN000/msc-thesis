# top-most EditorConfig file
root = true

# Applies to all Lean files
[*.lean]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Applies to Lake configuration files
[lakefile.lean]
indent_size = 2

# Applies to Markdown files (docs, READMEs)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # allow trailing spaces for line breaks
